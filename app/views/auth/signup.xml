<Alloy>
	<Window id="win" title="SignUp" navBarHidden="true" fullscreen="false">
	<ScrollView class='vert hfill wfill conthsize contwfill' id="forms">
		<ImageView image="/images/appicon.png" top="40" width="50%" ignore="1" />
		<View backgroundColor="#fba81c" id="name" value="" class="wfill hsize padding rounded" top="0" top="40">
            <TextField maxLength="30" hintText="Name *" onChange="textFieldOnBlur" required="1" left="5" top="0" right="0" value=""></TextField>
        </View>
        <View backgroundColor="#fba81c" id="email" value="" class="wfill hsize padding rounded" top="0">
            <TextField maxLength="30" hintText="Email *" onChange="textFieldOnBlur" required="1" left="5" top="0" right="0"value=""></TextField>
        </View>
        <View backgroundColor="#fba81c" id="mobile" value="" class="wfill hsize padding rounded" top="0">
            <TextField maxLength="30" hintText="Mobile" keyboardType="Titanium.UI.KEYBOARD_TYPE_PHONE_PAD" onChange="textFieldOnBlur" required="0" left="5" top="0" right="0"value=""></TextField>
        </View>
        <View backgroundColor="#fba81c" id="specialty" value="" class="wfill hsize padding rounded" top="0">
            <TextField maxLength="30" hintText="Specialty" onChange="textFieldOnBlur" required="0" left="5" top="0" right="0"value=""></TextField>
        </View>
        <View backgroundColor="#fba81c" id="qualification" value="" class="wfill hsize padding rounded" top="0">
            <TextField maxLength="30" hintText="Qualification" onChange="textFieldOnBlur" required="0" left="5" top="0" right="0"value=""></TextField>
        </View>
        <View backgroundColor="#fba81c" id="password" value="" class="wfill hsize padding rounded" top="0">
            <TextField maxLength="30" passwordMask="true" hintText="Password *" onChange="textFieldOnBlur" required="1" left="5" top="0" right="0"value=""></TextField>
        </View>
        <View backgroundColor="#fba81c" id="password2" value="" class="wfill hsize padding rounded" top="0">
            <TextField maxLength="30" passwordMask="true" hintText="Confirm Password *" onChange="textFieldOnBlur" required="1" left="5" top="0" right="0"value=""></TextField>
        </View>
		<Button class="button" onClick="doSubmit" title="Sign Up" />
		<Button onClick="closeWindow" class="button" title="Cancel" bottom="40"/>
	</ScrollView>
    </Window>
</Alloy>